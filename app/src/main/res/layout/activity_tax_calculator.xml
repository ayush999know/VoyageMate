<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/propertyTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Property Type:"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/propertyTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/locationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Location:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/locationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/sizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Property Size (in sq ft):"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/sizeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Size in sq ft"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/rentalValueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Annual Rental Value:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/rentalValueInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Annual Rental Value"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate Property Tax"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/resultLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your property tax is:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
