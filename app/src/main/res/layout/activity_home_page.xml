<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Top bar with Profile and Speaker emoji -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="16sp"
            android:layout_toEndOf="@id/profile_icon"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/speaker_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”Š"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:focusable="true" />

    </RelativeLayout>

    <!-- Horizontal ScrollView with ImageViews -->
    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/top_bar"
        android:layout_marginTop="16dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:src="@drawable/sewage"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:src="@drawable/swachh"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:src="@drawable/smart"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- GridLayout for the 3x2 grid of small squares -->
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontal_scroll_view"
        android:layout_marginTop="16dp"
        android:columnCount="3"
        android:rowCount="2"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="16dp">

        <!-- ImageViews for grid cells -->

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/propertyicon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:src="@drawable/watertaxicon"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:src="@drawable/guarbage"
            android:scaleType="centerCrop" />
    </GridLayout>

    <!-- Still image below GridLayout -->
    <ImageView
        android:id="@+id/still_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/grid_layout"
        android:layout_marginTop="38dp"
        android:scaleType="centerCrop"
        android:src="@drawable/a"
        android:clickable="true" />

    <!-- ScrollView for additional content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/still_image"
        android:layout_above="@id/linearLayout"
        android:layout_marginBottom="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/image_b"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/b"
                android:clickable="true" />

            <ImageView
                android:id="@+id/image_c"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/c"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Past Payment"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/image_d"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/d"
                android:clickable="true" />

            <ImageView
                android:id="@+id/image_e"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/e"
                android:clickable="true" />

            <ImageView
                android:id="@+id/image_f"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/f"
                android:clickable="true" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom icons layout -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/bottom_icon1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/bottom_icon2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/dashboard" />

        <ImageView
            android:id="@+id/bottom_icon3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/chatbot" />

    </LinearLayout>

</RelativeLayout>
