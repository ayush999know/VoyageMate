<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Top bar with Profile and Notification icons -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notification"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- VideoView for playing video -->
    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/top_bar"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp" />

    <!-- GridLayout for the 3x2 grid of small squares -->
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_view"
        android:layout_marginTop="16dp"
        android:columnCount="3"
        android:rowCount="2"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="16dp">

        <!-- ImageView for the first cell -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:src="@drawable/q"
            android:scaleType="centerCrop" />

        <!-- ImageView for the second cell -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:src="@drawable/watertaxicon"
            android:scaleType="centerCrop" />

        <!-- ImageView for the third cell -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:src="@drawable/guarbage"
            android:scaleType="centerCrop" />
    </GridLayout>

    <!-- Still image below GridLayout -->

    <!-- ScrollView for additional content -->

    <ImageView
        android:id="@+id/still_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/grid_layout"
        android:layout_marginTop="38dp"
        android:scaleType="centerCrop"
        android:src="@drawable/a"
        android:clickable="true" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/still_image"
        android:layout_above="@id/linearLayout"
        android:layout_marginBottom="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Add your content here that you want to be scrollable -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:padding="8dp" />

            <!-- Example additional ImageView -->
            <ImageView
                android:id="@+id/image_b"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/b"
                android:clickable="true" />

            <ImageView
                android:id="@+id/image_c"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/c"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Past Payment"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/image_d"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/d"
                android:clickable="true" />

            <ImageView
                android:id="@+id/image_e"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/e"
                android:clickable="true" />

            <ImageView
                android:id="@+id/image_f"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/f"
                android:clickable="true" />




</LinearLayout>
    </ScrollView>

    <!-- Bottom icons layout -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/bottom_icon1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/bottom_icon2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/dashboard" />

        <ImageView
            android:id="@+id/bottom_icon3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/profile" />

    </LinearLayout>

</RelativeLayout>
